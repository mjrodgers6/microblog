<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="signinup.css">
    <link href='http://fonts.googleapis.com/css?family=Josefin+Sans:400,700|Amatic+SC' rel='stylesheet' type='text/css'>
    <meta charset='UTF-8'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="signinup.js"></script>

    <title>Stream</title>
</head>

<body>
  <div class="sky">
    <h1>Stream</h1>
    <div id="signin">
      <form method="POST" action="/sign-in">
        <input type="text" name="username" placeholder="Username"><br>
        <input type="password" name="password" placeholder="Password"><br>
        <button type="submit" class="submit">Sign In</button><br><br>
        <!-- <button type="button" class="submit" href="sign-up">Not a User? Sign Up Here</button> -->
      </form>
      <h3>Not a Member? Sign up <span>HERE</span></h3> 
    </div>

    <div id="signup">
      <form method="POST" action="/sign-up">
        <input type="text" name="[user]fname" placeholder="First Name"><br>
        <input type="text" name="[user]lname" placeholder="Last Name"><br><br>
        <input type="text" name="[user]username" placeholder="Desired Username"><br>
        <input type="text" name="[user]email" placeholder="E-mail"><br>
        <input type="password" name="[user]password" placeholder="Password"><br>
        <input type="password" name="confirm_password" placeholder="Confirm Password"><br><br>
        <input type="text" name="[profile]location" placeholder="Location"><br>
        <input type="text" name="[profile]occupation" placeholder="Occupation"><br>
        <input type="text" name="[profile]age" placeholder="Age"><br><br>
        <button type="submit" class="submit">Join</button>
      </form>
    </div>
    
    <div class="clouds_one"></div>
    <div class="clouds_two"></div>
    <div class="clouds_three"></div>
  </div>
</body>
</html>


